<%-include("../partials/header.ejs")%>


<div class="container">
    <h1 style="text-align: center;margin-top: 50px;">create a new campground</h1>
    <div class="row">      
        <div style="width:30%;margin: 30px auto;">
           
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Input the camp name" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">    
                    <button class="btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
</div>
</div>

<%-include("../partials/footer.ejs")%>
