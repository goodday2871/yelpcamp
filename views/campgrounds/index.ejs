<%-include("../partials/header")%>





<div class="container">
    
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to YelpCamp</h1>
    <p>View our hand-picked campgrounds form all over the world</p>
    <p>
    <a class="btn btn-primary btm-lg" href="/campgrounds/new">add new camps</a></p>
</div>
</header>

<div class="row text-center" style="display: flex;flex-wrap:wrap;">
    <div class ="col-lg-12">
        <h3>Our most popular camps</h3>
    </div>
    
    <%campgrounds.forEach(function(camps){%>
        <div class="col-md-3 col-sm-6">
            <div  class="img-thumbnail">
                <img class="img-thumbnail" src="<%=camps.image%>">
            
            <div class="caption">
                <h4><%=camps.name%></h4>  
            </div>
            <p>
                <a href="/campgrounds/<%=camps._id%>" class="btn btn-primary">more info</a>
            </p>
        </div>
        </div>
        <%})%>
    
</div>

</div>
<%-include("../partials/footer")%>
