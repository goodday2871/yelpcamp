<div class="container">
    <h1 style="text-align: center;margin-top: 50px;">Add New Comment to <%=campground.name%></h1>
    <div class="row">      
        <div style="width:30%;margin: 30px auto;">
           
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]">text your comment here</textarea>
                </div>
                <div class="form-group">    
                    <button class="btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
</div>
</div>

